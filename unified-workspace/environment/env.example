# ðŸš€ Unified Workspace Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE WORKSPACE SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
WORKSPACE_ROOT=/path/to/your/unified-workspace

# =============================================================================
# AI & MACHINE LEARNING APIs
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Hugging Face
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf

# =============================================================================
# TRADING & FINANCIAL APIs
# =============================================================================

# Alpaca Trading
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Robinhood
ROBINHOOD_USERNAME=your_robinhood_username_here
ROBINHOOD_PASSWORD=your_robinhood_password_here
ROBINHOOD_MFA_CODE=your_mfa_code_here

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Polygon.io
POLYGON_API_KEY=your_polygon_api_key_here

# Yahoo Finance (no API key needed)
YAHOO_FINANCE_ENABLED=True

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (Default)
DATABASE_URL=sqlite:///shared/data/workspace.db
SQLITE_DATABASE_PATH=shared/data/workspace.db

# PostgreSQL (Optional)
POSTGRES_URL=postgresql://username:password@localhost:5432/workspace
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=workspace
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# MongoDB (Optional)
MONGODB_URL=mongodb://localhost:27017/workspace
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=workspace

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# WEB DEVELOPMENT & APIs
# =============================================================================

# Flask/FastAPI Settings
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your_flask_secret_key_here
FASTAPI_TITLE=Unified Workspace API
FASTAPI_VERSION=1.0.0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# CLOUD SERVICES
# =============================================================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Azure
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string_here
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id_here
GOOGLE_CLOUD_CREDENTIALS_FILE=path/to/your/credentials.json

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging
LOG_FILE=logs/workspace.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key_here

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption
ENCRYPTION_KEY=your_encryption_key_here
BCRYPT_ROUNDS=12

# =============================================================================
# COMMUNICATION & INTEGRATIONS
# =============================================================================

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Slack
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email (Gmail)
GMAIL_USER=your_gmail_username_here
GMAIL_PASSWORD=your_gmail_app_password_here
GMAIL_SMTP_SERVER=smtp.gmail.com
GMAIL_SMTP_PORT=587

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Testing
TEST_DATABASE_URL=sqlite:///test.db
TEST_MODE=True
COVERAGE_REPORT_PATH=coverage/

# Code Quality
BLACK_LINE_LENGTH=88
FLAKE8_MAX_LINE_LENGTH=88
MYPY_STRICT=True

# Git
GIT_REPO_URL=https://github.com/Dadudekc/unified-workspace.git
GIT_BRANCH=main

# =============================================================================
# PROJECT-SPECIFIC SETTINGS
# =============================================================================

# AI Debugger Assistant
DEBUGGER_OPENAI_MODEL=gpt-4
DEBUGGER_MAX_TOKENS=2000
DEBUGGER_TEMPERATURE=0.3

# Trading Tools
TRADING_RISK_PERCENTAGE=2.0
TRADING_MAX_POSITION_SIZE=1000
TRADING_STOP_LOSS_PERCENTAGE=5.0
TRADING_TAKE_PROFIT_PERCENTAGE=10.0

# FocusForge
FOCUSFORGE_DISTRACTION_THRESHOLD=30
FOCUSFORGE_SESSION_LENGTH=25
FOCUSFORGE_BREAK_LENGTH=5

# Web Apps
WEB_APP_PORT=3000
WEB_APP_HOST=localhost
WEB_APP_DEBUG=True

# =============================================================================
# OPTIONAL SETTINGS (Uncomment as needed)
# =============================================================================

# # GPU Settings
# CUDA_VISIBLE_DEVICES=0
# TF_FORCE_GPU_ALLOW_GROWTH=True

# # Proxy Settings
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080

# # VPN Settings
# VPN_ENABLED=False
# VPN_SERVER=vpn.company.com
# VPN_USERNAME=your_vpn_username
# VPN_PASSWORD=your_vpn_password

# # Advanced Logging
# LOG_STRUCTURED=True
# LOG_JSON_FORMAT=True

# # Performance Monitoring
# ENABLE_PROFILING=True
# PROFILING_OUTPUT=profiles/

# # Security Scanning
# ENABLE_SECURITY_SCAN=True
# SECURITY_SCAN_SCHEDULE=daily

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Production
PRODUCTION_ENV=False
PRODUCTION_DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/prod_db
PRODUCTION_SECRET_KEY=your_production_secret_key_here

# Staging
STAGING_ENV=False
STAGING_DATABASE_URL=postgresql://staging_user:staging_pass@staging_host:5432/staging_db

# Development
DEV_ENV=True
DEV_DATABASE_URL=sqlite:///dev.db
